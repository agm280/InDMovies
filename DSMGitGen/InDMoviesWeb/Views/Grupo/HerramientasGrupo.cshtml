

@if (@ViewBag.Iguales == true)
{
    <a href="@Url.Action("Edit", "Grupo",new { id = @ViewBag.Nombre })" class="btn btn-info">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
         Editar
    </a>

    <a href="@Url.Action("Delete", "Grupo",new { id = @ViewBag.Nombre })" class="btn btn-danger">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        Borrar
    </a>

    <a href="@Url.Action("ExpulsarMiembro", "Grupo",new { id = @ViewBag.Nombre })" class="btn btn-warning">
        <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
        Expulsar Miembro
    </a>

}