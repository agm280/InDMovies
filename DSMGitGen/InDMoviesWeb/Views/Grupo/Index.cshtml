@model IEnumerable<InDMoviesWeb.Models.GrupoModel>

@{
    ViewBag.Title = "Grupos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Grupos</h2>

<p style="text-align:right">@Html.ActionLink("Crear Grupo", "Create", null, new { @class = "btn btn-primary btn-sm", @role = "button", @style = "background-color:#E52A6F; border-color:#E52A6F; font-size:16pt" })</p>

<div class="container text-center">
        @foreach (var item in Model)
        {

        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading"> <h3>@Html.DisplayFor(modelItem => item.Nombre)</h3></div>
                <div class="panel-body">
                    <img src="@Html.DisplayFor(modelItem => item.Imagen)" class="img-rounded" style="margin:auto;width:50%;height:50%" alt="Image">
                    <p> </p>
                    <p><em>@Html.DisplayFor(modelItem => item.Descripcion)</em></p>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Nombre }, new { @class = "btn btn-primary btn-md", @role = "button", @style = "background-color:#67AECA; border-color:#67AECA;" })
                    <br>  
                </div>
            </div>          
        </div>

        }
</div>
