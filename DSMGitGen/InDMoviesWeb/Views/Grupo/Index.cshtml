@model IEnumerable<InDMoviesWeb.Models.GrupoModel>

@{
    ViewBag.Title = "Grupos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grupos</h2>

<p>@Html.ActionLink("Crear Grupo", "Create", null, new { @class = "btn btn-primary btn-md", @role = "button" })</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AceptaMiembros)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            string nombre = @Html.DisplayFor(modelItem => item.Nombre).ToString();

            <tr>
                <td>
                    @Html.ActionLink(nombre, "Details", new { id = item.Nombre })
                </td>
                <td>
                    <img class="img-circle" height="100" width="100" src="@Html.DisplayFor(modelItem => item.Imagen)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lider)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Completo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AceptaMiembros)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Nombre })
                </td>
            </tr>
        }
    </table>
</div>
